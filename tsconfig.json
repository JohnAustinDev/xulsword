{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    /* "lib": ["dom", "esnext"], */
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./configs/**/*",
    "./node_modules/libxulsword/**/*",
    "./*.mjs"
  ]
}
