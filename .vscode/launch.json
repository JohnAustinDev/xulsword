  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "App electron server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:main"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": [
        "${workspaceFolder}/build/app/dist/**/*",
        "${workspaceFolder}/node_modules/electron-devtools-installer/dist/utils.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "WebApp node server",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:server"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/build/webapp/dist/**/*"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run node/electron on something",
      "runtimeExecutable": "node",
      "runtimeArgs": ["/home/dale/src/xulsword/test.cjs"],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/build/webapp/dist/**/*"]
    },
    {
      "name": "Attach to Process",
      "type": "node",
      "request": "attach",
      "processId": "${command:PickProcess}"
    }
  ]
}
