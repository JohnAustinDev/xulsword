    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "server",
        "runtimeExecutable": "yarn",
        "runtimeArgs": ["start-server"],
        "skipFiles": [
            "<node_internals>/**"
        ],
      },
	    {
            "type": "node",
            "request": "launch",
            "name": "xulsword",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start"],
            "skipFiles": [
              "<node_internals>/**",
            ],
            "outFiles": [
                "${workspaceFolder}/src/**/*.js"
            ],
        },
        {
          "name": "Attach to Process",
          "type": "node",
          "request": "attach",
          "processId": "${command:PickProcess}"
        },
    ]
}
