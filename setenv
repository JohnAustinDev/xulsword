#!/bin/bash
# source this file to set build environment variables.

# Set to x86_64-w64-mingw32 to cross-compile to 64 bit windows, or 
# i686-w64-mingw32 to cross-compile to 32 bit windows.
export TOOLCHAIN_PREFIX=i686-w64-mingw32
export ADDRESS_MODEL=32
if [ "$TOOLCHAIN_PREFIX" = "x86_64-w64-mingw32" ]; then
  export ADDRESS_MODEL=64
fi
export XCOMP="${ADDRESS_MODEL}win"

if [ -e /vagrant ]; then export CONTEXT="xsguest"; else export CONTEXT="host"; fi
if [ "$CONTEXT" = "xsguest" ]; then exportvXULSWORD="$HOME/src/xulsword"; else export XULSWORD="$( cd "${BASH_SOURCE%/*}" ; pwd -P )"; fi
export CPP="$XULSWORD/Cpp"

export NVM_DIR="$HOME/.nvm"

# svn rev 3563 is sword-1.8.1
export swordRev=3563
