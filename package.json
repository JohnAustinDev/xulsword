{
  "name": "xulsword",
  "productName": "xulsword",
  "description": "Accessible Bible study software created with node.js",
  "scripts": {
    "build": "concurrently \"yarn build:main\" \"yarn build:renderer\"",
    "build:main": "cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.main.prod.babel.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.renderer.prod.babel.js",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir src",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "package": "node -r @babel/register ./.erb/scripts/clean.js dist release && yarn build && electron-builder build --publish never",
    "packageWin32": "cross-env XCOMP=ming32 XADS=32 yarn package --win -ia32",
    "packageWin64": "cross-env XCOMP=ming32 XADS=64 yarn package --win -ia64",
    "postinstall": "node -r @babel/register .erb/scripts/check-native-dep.js && electron-builder install-app-deps && yarn cross-env NODE_ENV=development webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.babel.js && opencollective-postinstall && yarn-deduplicate yarn.lock",
    "start": "node -r @babel/register ./.erb/scripts/check-port-in-use.js && yarn start:renderer",
    "start:main": "cross-env NODE_ENV=development LD_LIBRARY_PATH=./Cpp/build electron -r ./.erb/scripts/babel-register ./src/main/main.ts",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config ./.erb/configs/webpack.config.renderer.dev.babel.js",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{babelrc,eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "npmRebuild": true,
    "productName": "xulsword",
    "appId": "org.xulsword",
    "asar": false,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "extraFiles": [
        {
          "from": "./Cpp/build/libxulsword-static.dylib",
          "to": "libxulsword-static.dylib"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "extraFiles": [
        {
          "from": "./Cpp/install.32win/dll/libxulsword-static.dll",
          "to": "libxulsword-static.dll"
        },
        {
          "from": "./Cpp/install.32win/dll/libstdc++-6.dll",
          "to": "libstdc++-6.dll"
        },
        {
          "from": "./Cpp/install.32win/dll/libgcc_s_sjlj-1.dll",
          "to": "libgcc_s_sjlj-1.dll"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "extraFiles": [
        {
          "from": "./Cpp/install/so/libxulsword-static.so",
          "to": "libxulsword-static.so"
        }
      ]
    },
    "directories": {
      "app": "build/app",
      "buildResources": "assets",
      "output": "build/release"
    },
    "extraResources": [
      "./assets/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnAustinDev/xulsword.git"
  },
  "author": {
    "name": "John Austin",
    "email": "gpl.programs.info@gmail.com",
    "url": "https://github.com/JohnAustinDev/xulsword"
  },
  "contributors": [
    {
      "name": "Tom Roth"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnAustinDev/xulsword/issues"
  },
  "keywords": [
    "electron",
    "react"
  ],
  "homepage": "https://github.com/JohnAustinDev/xulsword#readme",
